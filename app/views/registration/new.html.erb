<h1>Sign Up</h1>
  <%= form_with model: @user, url: sign_up_path do |f| %>
    <p>
        <%= f.label 'username' %><br>
        <%= f.text_field :username %>
    </p>
    <p>
        <%= f.label 'full name' %><br>
        <%= f.text_field :full_name %>
    </p>
    <p>
        <%= f.label 'password' %><br>
        <%= f.password_field :password %>
    </p>
    <p>
        <%= f.label "User type" %>
        <%= select(:user, :user_type, options_for_select(['teacher', 'student'])) %>
    </p>
    <p>
        <%= f.submit 'Sign Up' %>
    </p>
<% end %>
